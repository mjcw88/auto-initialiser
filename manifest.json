{
    "manifest_version": 3,
    "name": "Auto Initialiser",
    "icons": {
        "128": "icon128.png"
    },
    "version": "4.3",
    "description": "A Chrome extension that automatically initiates AQC sessions in Duplo.",
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "128": "icon128.png"
        }
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage",
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ]
}
